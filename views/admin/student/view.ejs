<%- include("../header.ejs") %> <%- include("../sidebar.ejs") %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">View Student</h1>
        </div>
        <!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active">Display</li>
          </ol>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->
  <!-- </div> -->
  <div class="card">
    <!-- /.card-header -->
    <div class="card-body">
      <table id="example1" class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>DOB</th>
            <th>Roll Number</th>
            <th>Semester</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Course</th>
            <th>Image</th>
            <th>Action</th>
          </tr>
        </thead>
        <tfoot>
          <tbody>
            <td><%=d._id%></td>   
            <td><%=d.name%></td>         
            <td><%=d.email%></td>         
            <td><%=d.dob%></td>         
            <td><%=d.rollnumber%></td>         
            <td><%=d.semester%></td>         
            <td><%=d.address%></td>         
            <td><%=d.phone%></td>                 
            <td><%=d.course%></td>
            <th><img src="<%= d.image.url %>" width="50px" alt="" /></th>
            <td> <a href="admin/studentdelete/<%=d._id%>" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a></td>
        </tbody>
        </tfoot>
      </table>
    </div>
    <!-- /.card-body -->
  </div>
  <!-- /.card -->
</div>
<%- include("../footer.ejs")%>
