<%- include("../header.ejs") %> <%- include("../sidebar.ejs") %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">Course Update Data</h1>
        </div>
        <!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active">Display</li>
          </ol>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->
  <!-- </div> -->
  <div class="card">
    <!-- /.card-header -->
    <div class="card-body">
      <div class="modal-body">
        <form
          action="/admin/courseupdate/<%= d._id%>"
          method="post"
          enctype="multipart/form-data"
        >
          <div class="form-group">
            <label for="">Email</label>
            <input
              type="email"
              name="email"
              class="form-control"
              value="<%= d.email%>"
            />
            <label for="">Courses</label>
            <input
              type="text"
              name="course"
              value="<%=d.course%>"
              readonly
              class="form-control"
            />
            <center>
              <button
                class="btn btn-info"
                type="submit"
                style="margin-top: 25px"
              >
                Update
              </button>
            </center>
          </div>
        </form>
      </div>
    </div>
    <!-- /.card-body -->
  </div>
  <!-- /.card -->
</div>

